<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_background" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/setting" />

    <ImageButton
        android:id="@+id/colorSchemeButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/uniformColor"
        android:layout_centerHorizontal="true"
        android:src="@drawable/uniform_color"
        android:background="@android:color/transparent" />

    <SeekBar
        android:id="@+id/gravConstant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2" />

    <CheckBox
        android:id="@+id/uniformColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/uniformSize"
        android:text=" " />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView1"
        android:src="@drawable/ucg" />

    <ImageButton
        android:id="@+id/enterSimul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/enter_simulation2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gravConstant"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/mass" />

    <SeekBar
        android:id="@+id/massSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView3" />

    <CheckBox
        android:id="@+id/uniformSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/uniSizeButt"
        android:text=" " />

    <ImageButton
        android:id="@+id/uniSizeButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/colorSchemeButt"
        android:layout_below="@+id/massSize"
        android:background="@android:color/transparent"
        android:src="@drawable/uniform_size" />

    <ImageButton
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enterSimul"
        android:layout_alignLeft="@+id/enterSimul"
        android:layout_marginBottom=" 16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/reset" />

    <ImageButton
        android:id="@+id/realismButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/colorSchemeButt"
        android:layout_below="@+id/colorSchemeButt"
        android:background="@android:color/transparent"
        android:src="@drawable/realism" />

    <CheckBox
        android:id="@+id/realism"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/realismButt"
        android:text="" />

</RelativeLayout>